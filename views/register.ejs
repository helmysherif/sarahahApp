<%- include("partials/header.ejs")  %> 
    <div class="container text-center my-5">
        <div class="user my-3">
            <i class="far fa-edit user-icon"></i>
            <h4 class="login">Register</h4>
        </div>
        <div class="card p-5 w-50 m-auto">
            
            <form method="POST" action="/handleRegister">
                
                <div class="form-group">
                    <input value = "<%= oldInputs.length == 0 ? '' : oldInputs[0].name %>" class="form-control" placeholder="Enter your Name" type="text" name="name">
                    <% if (errors.find(e => e.param == "name")) { %>
                        <div class = "alert alert-danger text-center my-3">
                            <h6 class = "m-0 p-0">name is required</h6>
                        </div>
                    <% } %>
                </div>
                <div class="form-group">
                    <input value = "<%= oldInputs.length == 0 ? '' : oldInputs[0].email %>" class="form-control my-2 " placeholder="Enter your email" type="email" name="email" >
                    <% if (errors.find(e => e.param == "email")) { %>
                        <div class = "alert alert-danger text-center my-3">
                            <h6 class = "m-0 p-0">email is required</h6>
                        </div>
                    <% } %>
                </div>
                <div class="form-group">
                    <input value = "<%= oldInputs.length == 0 ? '' : oldInputs[0].password %>" class="form-control  " placeholder="Enter your Password" type="password" name="password" >
                    <% if (errors.find(e => e.param == "email")) { %>
                        <div class = "alert alert-danger text-center my-3">
                            <h6 class = "m-0 p-0">password is required</h6>
                        </div>
                    <% } %>
                </div>
                <div class="form-group">
                    <input class="form-control  my-2" placeholder="Password Confirmation" type="password" name="PasswordConfirmation" >
                    <% if (errors.find(e => e.param == "PasswordConfirmation")) { %>
                        <div class = "alert alert-danger text-center my-3">
                            <h6 class = "m-0 p-0">your password and confirmation password does not match</h6>
                        </div>
                    <% } %>
                </div>
                <button class="btn btn-default-outline my-4 w-100 rounded">Register</button>
                <a class="btn btn-default-outline" href="/login">Login</a>
            </form>
        </div>
    </div>
<%- include("partials/footer.ejs")  %> 